{{>layout/header}}
<h1>게시글 수정</h1>
<div>
    <div style="width:80%; margin: 0 auto">
        <form>
            <div style="flex-direction:column; display:flex">
                <label for="id" style="width:20%; height:20px">글 번호</label>
                <input type="text" id="id" style="width:80%; height:30px; margin-top: 10px" value="{{post.id}}" readonly>
            </div>
            <div style="flex-direction:column; display:flex">
                <label for="title" style="width:20%; height:20px">제목</label>
                <input type="text" id="title" style="width:80%; height:30px; margin-top: 10px" placeholder="제목을 입력하세요" value="{{post.title}}">
            </div>
            <div style="flex-direction:column; display:flex">
                <label for="author" style="width:20%; height:20px">작성자</label>
                <input type="text" id="author" style="width:80%; height:30px; margin-top: 10px" value="{{post.author}}" readonly>
            </div>
            <div style="flex-direction:column; display:flex">
                <label for="content" style="width:20%; height:20px">내용</label>
                <textarea id="content" style="width:80%; height:30px; margin-top: 10px" placeholder="내용을 입력하세요">{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" style="width:10%; margin: 0 auto; margin-top: 10px; background-color: lightblue; padding-left: 20px; padding-right: 20px; padding-top: 2px; padding-bottom: 2px; border-radius: 2px;">취소</a>
        <button type="button" id="btn-update" style="width:10%; margin: 0 auto; margin-top: 10px">수정 완료</button>
        <button type="button" id="btn-delete" style="width:10%; margin: 0 auto; margin-top: 10px">삭제</button>
    </div>
</div>
{{>layout/footer}}